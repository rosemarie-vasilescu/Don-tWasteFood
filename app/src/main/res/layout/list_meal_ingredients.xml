<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RoundedSquare"
    android:id="@+id/ingredient_list_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"


   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView_ingredients"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center"

            android:src="@drawable/ic_launcher_background"/>
<!--        <TextView-->
<!--            android:id="@+id/textView_ingredients_name"-->
<!--            android:textSize="16dp"-->
<!--            android:textAlignment="center"-->
<!--            android:textStyle="bold"-->
<!--            android:padding="4dp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Apple"/>-->
        <TextView
            android:id="@+id/textView_ingredients_quantity"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn_plus_meal"

            android:layout_toRightOf="@id/imageView_ingredients"
            android:gravity="center_vertical"

            android:padding="4dp"
            android:text="1 pc"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/textView_ingredients_quantity"
            android:layout_toLeftOf="@id/btn_plus_meal"
            android:layout_toRightOf="@id/imageView_ingredients"
             />/>

<ImageView
    android:id="@+id/btn_plus_meal"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"

    android:layout_marginRight="8dp"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_add_shopping"
    />

        </RelativeLayout>



</androidx.cardview.widget.CardView>