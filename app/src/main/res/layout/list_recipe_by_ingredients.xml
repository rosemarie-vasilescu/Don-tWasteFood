<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:id="@+id/similar_recipe_holder">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="194dp"
            android:id="@+id/imageView_similar"
            android:scaleType="centerCrop"
            android:contentDescription="ceva"
            android:src="@drawable/ic_launcher_background"
android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_gray"
                android:text="You have"
                android:textAllCaps="false"


                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/SpecificCornerCut" />
        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_similar_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Similar name"

            android:ellipsize="end"
            android:lines="2"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>